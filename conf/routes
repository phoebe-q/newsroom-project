# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index(request: Request)
GET     /ws                         controllers.HomeController.socket()
GET     /resultsView                controllers.HomeController.resultsView(results: java.util.List[models.Article])
GET     /eventView/:eventID        controllers.HomeController.eventView(request: Request, eventID: String)

GET     /articles                   controllers.ArticleController.index()
#GET     /articles/index                   controllers.ArticleController.indexDB()
GET     /articles/:searchTerm       controllers.ArticleController.search(searchTerm: String)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file: Asset)




